{
  "expo": {
    "name": "MadeMeSmile",
    "slug": "MadeMeSmile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mademesmile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to capture photos and videos for your moments.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record audio for your moments.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select photos and videos for your moments."
      },
      "bundleIdentifier": "com.sadique-x.MadeMeSmile"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MadeMeSmile to access your camera to capture photos and videos for your moments."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow MadeMeSmile to access your microphone to record audio for your moments."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow MadeMeSmile to access your photos to select images for your moments."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
